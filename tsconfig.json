{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "outDir": "dist",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "lib": ["es2017"],
    "allowSyntheticDefaultImports": true,
    "jsx": "react"
  },
  "include": [
    "src"
  ]
}
